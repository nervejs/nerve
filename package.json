{
	"name": "nervejs",
	"version": "0.0.15",
	"description": "A framework for creating fast and scalable web applications.",
	"main": "dist/nerve",
	"typings": "dist/typings/nervejs",
	"scripts": {
		"clean": "rm -rf ./dist/ ./tmp/js",
		"ts": "./node_modules/.bin/tsc",
		"babel": "./node_modules/.bin/babel ./tmp/js/es2015 -d ./tmp/js/es5",
		"uglify": "./node_modules/.bin/uglifyjs --compress --mangle -o ./dist/nerve.min.js -- ./dist/nerve.js",
		"build": "npm run clean && npm run ts && npm run babel && ./bin/requirejs && npm run uglify && ./bin/copy-typings && rm -rf ./tmp",
		"postinstall": "npm run build"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/nervejs/nerve.git"
	},
	"keywords": [
		"framework",
		"mvc",
		"client-side",
		"browser"
	],
	"author": "denis.yarkeev@gmail.com",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/nervejs/nerve/issues"
	},
	"homepage": "https://github.com/nervejs/nerve#readme",
	"devDependencies": {},
	"dependencies": {
		"axios": "^0.16.2",
		"babel-cli": "^6.24.1",
		"babel-preset-es2015": "^6.24.1",
		"requirejs": "^2.3.4",
		"typescript": "^2.4.2",
		"uglify": "^0.1.5"
	}
}
