{
	"compilerOptions": {
		"module": "amd",
		"declaration" :true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"target": "es2015",
		"rootDir": "src",
		"outDir": "./tmp/js/es2015"
	},
	"include": [
		"src/**/*",
		"typings/index.d.ts"
	]
}